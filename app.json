{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "fr.dvilleneuve.intex_spa",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "brandColor": "#2696A8",
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Intex Spa MQTT"
  },
  "description": {
    "en": "Adds support for Intex Spa throught MQTT protocol"
  },
  "category": [
    "appliances"
  ],
  "permissions": [
    "homey:app:nl.scanno.mqtt"
  ],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Damien Villeneuve",
    "email": "contact@dvilleneuve.fr"
  },
  "flow": {
    "triggers": [
      {
        "id": "actual_temperature_changed",
        "title": {
          "en": "Actual temperature changed"
        },
        "tokens": [
          {
            "name": "temperature",
            "type": "number",
            "title": {
              "en": "Actual temperature (°C)"
            },
            "example": 38
          }
        ]
      },
      {
        "id": "bubble_disabled",
        "title": {
          "en": "Bubble was disabled"
        }
      },
      {
        "id": "bubble_enabled",
        "title": {
          "en": "Bubble was enabled"
        }
      },
      {
        "id": "filter_disabled",
        "title": {
          "en": "Filter was disabled"
        }
      },
      {
        "id": "filter_enabled",
        "title": {
          "en": "Filter was enabled"
        }
      },
      {
        "id": "heater_disabled",
        "title": {
          "en": "Heater was disabled"
        }
      },
      {
        "id": "heater_enabled",
        "title": {
          "en": "Heater was enabled"
        }
      },
      {
        "id": "power_disabled",
        "title": {
          "en": "Power was disabled"
        }
      },
      {
        "id": "power_enabled",
        "title": {
          "en": "Power was enabled"
        }
      },
      {
        "id": "target_temperature_changed",
        "title": {
          "en": "Target temperature changed"
        },
        "tokens": [
          {
            "name": "temperature",
            "type": "number",
            "title": {
              "en": "Target temperature (°C)"
            },
            "example": 38
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "images": {
        "large": "/drivers/intext_spa/assets/images/large.png",
        "small": "/drivers/intext_spa/assets/images/small.png"
      },
      "capabilities": [
        "power",
        "heater",
        "filter",
        "bubble",
        "tempAct",
        "measure_temperature",
        "target_temperature"
      ],
      "capabilitiesOptions": {
        "target_temperature": {
          "min": 20,
          "max": 40,
          "step": 1
        }
      },
      "icon": "/drivers/intext_spa/assets/icon.svg",
      "class": "other",
      "pair": [
        {
          "id": "loading",
          "template": "loading"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "create_devices"
          },
          "options": {
            "singular": false
          }
        },
        {
          "id": "create_devices"
        }
      ],
      "id": "intext_spa",
      "name": {
        "en": "Intex Spa device"
      }
    }
  ],
  "capabilities": {
    "bubble": {
      "type": "boolean",
      "title": {
        "en": "Bubble"
      },
      "getable": true,
      "setable": true,
      "uiComponent": "button",
      "uiQuickAction": false,
      "icon": "assets/icons/capabilities/bubble.svg"
    },
    "filter": {
      "type": "boolean",
      "title": {
        "en": "Filter"
      },
      "getable": true,
      "setable": true,
      "uiComponent": "button",
      "uiQuickAction": false,
      "icon": "assets/icons/capabilities/filter.svg"
    },
    "heater": {
      "type": "boolean",
      "title": {
        "en": "Heater"
      },
      "getable": true,
      "setable": true,
      "uiComponent": "button",
      "uiQuickAction": false,
      "icon": "assets/icons/capabilities/heater.svg"
    },
    "power": {
      "type": "boolean",
      "title": {
        "en": "Powered"
      },
      "getable": true,
      "setable": true,
      "uiComponent": "button",
      "uiQuickAction": false,
      "icon": "assets/icons/capabilities/power.svg"
    },
    "tempAct": {
      "type": "number",
      "title": {
        "en": "Current temperature"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "units": {
        "en": "°C"
      },
      "icon": "assets/icons/capabilities/tempAct.svg"
    }
  }
}